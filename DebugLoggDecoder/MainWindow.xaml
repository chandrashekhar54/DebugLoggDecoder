<Window x:Class="DebugLoggDecoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebugLoggDecoder"
        mc:Ignorable="d"
        Title="Logger Decoder" Height="400" Width="350" MaxWidth="350" MaxHeight="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBox x:Name="textBoxStatus" HorizontalAlignment="Left" Margin="10" Width="310" Height="300"/>
            <StackPanel Orientation="Horizontal" Margin="10,5,5,5">
                <TextBox x:Name="textBoxFolderPath" Width="200" Height="20"/>
                <Button x:Name="buttonBrowser" Style="{StaticResource Buttons}" Margin="10" Width="100" Height="20" Content="Browse" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
